extends layout

block content
  div.title
  h1.title #{title}
    - var types = ["Digital","Service","Development"];

  form(method='POST' action='  ')
    div.form-group
        label(for='type') Type:
            select(type ='select',placeholder='Pick a type', name='type'   required='true')
                    for typ  in types
                           option#user(value=type) #{typ}
    div.form-group    
        label(for='name') Name:
        input#name.form-control(type='text', placeholder= '' name='name' required='true')
    div.form-group
        label(for='name') Unit:
        input#unit.form-control(type='text', placeholder='Pkg' name='unit')
    div.form-group
        label(for='sellingprice') Price:
        input#sellingprice.form-control(type='text', placeholder='9' name='sellingprice'  required='true')
    div.form-group
        label(for='description') Description:
        input#description.form-control(type='text', placeholder='This a Digital Marketing Service' name='description')
    div.form-group
        label(for='user') Account:
            select(type='select', placeholder='Select user' name='user' required='true')
             for user in _users
                option(value=user._id) #{user.accountname}
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
    for error in errors
     li!= error.msg